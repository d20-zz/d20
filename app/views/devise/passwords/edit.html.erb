<div class="container" id="top">
  <h2>Cambia tu contraseña</h2>

  <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :reset_password_token, :as => :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="row-fluid well">

      <div class="form-inputs">
        <%= f.input :password, :label => false, :placeholder => 'Nueva contraseña', :required => true %>
        <%= f.input :password_confirmation, :label => false, :placeholder => 'Confirmar nueva contraseñá', :required => true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Cambiar mi contraseña", class: "btn btn-primary btn-large" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>

</div>
