<div class="container" id="top">
	<div class="row">
		<div class="span4">

	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "well"}) do |f| %>
	<fieldset>
		<legend>Iniciar Sesión</legend>
	  <div class="form-inputs">
	    <%= f.input :email, :label => false, :placeholder => 'Correo electrónico', :required => false, :autofocus => true %>
	    <%= f.input :password, :label => false, :placeholder => 'Contraseña', :required => false %>
	    <%= f.input :remember_me, :label => 'Recordarme', :as => :boolean if devise_mapping.rememberable? %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, "Ingresar", class: "btn btn-primary btn-large" %>
	  </div>
	  </fieldset>
	<% end %>

	<%= render "devise/shared/links" %>

		</div>

		<%= image_tag("vote.png", :alt => "agroden") %>
		</div>
	</div>
</div>
