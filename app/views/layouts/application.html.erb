<!DOCTYPE html>
<html>
<head>
  <title>D20</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

</head>
<body>
	<div class="navbar navbar-inverse navbar-static-top">
		<div class="navbar-inner">
			<div class="container">
				<a href="<%= root_path %>" class="brand">Democracia 2.0</a>
				<ul class="nav">
					<li><a href="#aboutElement">¿Qué es?</a></li>
					<!-- <li><%= link_to "¿Qué es?", page_path("about") %></li> -->
					<li><%= link_to "Contacto", page_path("contact") %></li>
				</ul>
				<ul class="nav pull-right"> 
					<% if user_signed_in? %>
						<li><%= link_to current_user.profile_name, edit_user_registration_path %></li>
						<li><%= link_to "Cerrar Sesión", destroy_user_session_path, method: :delete %></li>
					<% else %>
						<li><%= link_to "Inscríbete", new_user_registration_path %></li>
						<li><%= link_to "Ingresar", new_user_session_path %></li>
					<% end %>
				</ul>
			</div>		
		</div>
	</div>

	<div class="container">
		<% flash.each do |type, message| %>
			<div class="alert <%= flash_class(type) %>">
				<button class="close" data-dismiss="alert">x</button>
				<%= message %>
			</div>
			<% end %>
	</div>

	<%= yield %>

	<footer>
		<div class="container">
			<hr><div id="copyright"><p>&copy; Democracia 2.0 2013</p></div>
		</div>
	</footer>

</body>
</html>
